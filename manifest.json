{
    "manifest_version": 2,
    "name": "openQA-ext",
    "description": "Chrome extension able to subscribe to events for some certain job opened currently in browser",
    "version": "0.2",
    "author": "Anton Smorodskyi",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_title": "openQA ext",
        "default_icon": "logo.png",
        "default_popup": "popup.html"
    },
    "permissions": ["activeTab", "storage", "alarms","notifications","https://*/","http://*/"]
}